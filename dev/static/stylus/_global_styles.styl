/* global-styles */

.g-row
  display flex
  flex-wrap wrap
  flex-direction row
  align-items center
  justify-content space-between
  text-align center

.description-block
  max-width 600px
  text-align center  
.image-block
  &__img
    max-width 575px
    width 100%
    &_right
      margin-right -50px
    &_left
      margin-left -50px

.line
  width 3.6875rem
  height: 5px;
  background lineColor
  border-radius 50px
  margin 0 auto

.g-title
  Acme()
  font-size 2.25rem
  line-height 48px
  text-transform uppercase

.g-text
  font-size 1.125rem
  line-height 28px
  &_bold
    font-size 1.125rem
    OpenSansBold()
    
.g-btn 
  border none
  border-radius 5px
  font-size .75rem
  line-height 20px
  text-transform uppercase
  &:hover
    cursor pointer




